<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CollectionViewDemo.MVVM.Views.ProductsView"
             Title="ProductsView">
    <CollectionView
        IsGrouped="True"
        ItemsSource="{Binding Produkt}">
        <CollectionView.ItemsLayout>
            <LinearItemsLayout ItemSpacing="10" Orientation="Vertical" />
        </CollectionView.ItemsLayout>
        <CollectionView.ItemTemplate>
            <DataTemplate>
            <Frame BackgroundColor="White" CornerRadius="15">
                <VerticalStackLayout>
                    <Image Source="{Binding Image}"/>
                    <Label Text="{Binding Name}" />
                    <Label Text="{Binding Price}" />
                </VerticalStackLayout>
            </Frame>
        </DataTemplate>
        </CollectionView.ItemTemplate>
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Label BackgroundColor="Lightgrey"
                       FontAttributes="Bold"
                       FontSize="Large"
                       Text="{Binding Name}"
                       TextColor="Black" />
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>
        <CollectionView.GroupFooterTemplate>
            <DataTemplate>
                <Label
                    Margin="0,0,0,10"
                    Text="{Binding Count, StringFormat='Total Products: {0:D}'}"
                    TextColor="MidnightBlue" />
            </DataTemplate>
        </CollectionView.GroupFooterTemplate>
    </CollectionView>
</ContentPage>